{
  "$id": "https://mapcolonies.com/three_d/fileSyncer/v1",
  "description": "The file-syncer schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["jobManager", "storage"],
  "allOf": [
    {
      "$ref": "https://mapcolonies.com/common/boilerplate/v4"
    },
    {
      "type": "object",
      "properties": {
        "jobManager": {
          "type": "object",
          "required": ["task", "heartbeat"],
          "$ref": "https://mapcolonies.com/infra/jobManager/forClients/v1"
        }
      }
    },
    {
      "type": "object",
      "description": "I can't set the source and destination under storage. The file-syncer doesn't get the schema",
      "properties": {
        "storage": {
          "type": "object",
          "required": ["source", "destination"],
          "properties": {
            "source": {
              "$ref": "#/definitions/provider"
            },
            "destination": {
              "$ref": "#/definitions/provider"
            }
          }
        }
      },
      "$comment": "TODO: solves the duplicate refs block issue"
    },
    {
      "type": "object",
      "properties": {
        "intervalMs": {
          "type": "number",
          "description": "Cron-Job interval in milliseconds for polling task attempt",
          "default": 5000
        },
        "taskPoolSize": {
          "type": "number",
          "description": "How many task the service will fetch and process in an interval",
          "default": 5
        }
      }
    }
  ],
  "definitions": {
    "provider": {
      "$ref": "https://mapcolonies.com/three_d/common/provider/v1"
    }
  }
}
