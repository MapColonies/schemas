{
  "$id": "https://mapcolonies.com/vector/externalToOsmTagMapping/v1",
  "type": "object",
  "allOf": [
    { "$ref": "https://mapcolonies.com/common/boilerplate/v2" },
    { "$ref": "#/definitions/databases" },
    { "$ref": "#/definitions/appSchema" }
  ],
  "definitions": {
    "databases": {
      "type": "object",
      "properties": {
        "db": {
          "type": "object",
          "required": ["redis", "timeout"],
          "properties": {
            "timeout": {
              "type": "number",
              "x-env-value": "DB_TIMEOUT",
              "default": 5000
            },
            "redis": {
              "allOf": [
                { "$ref": "https://mapcolonies.com/common/redis/v2" },
                {
                  "type": "object",
                  "properties": {
                    "keyPrefix": {
                      "type": "string",
                      "x-env-value": "REDIS_KEY_PREFIX"
                    },
                    "connectTimeout": {
                      "type": "number",
                      "x-env-value": "REDIS_CONNECT_TIMEOUT"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    },
    "appSchema": {
      "type": "object",
      "properties": {
        "application": {
          "type": "object",
          "required": ["services"],
          "properties": {
            "services": {
              "type": "object",
              "required": ["enabled"],
              "properties": {
                "enabled": { "type": "boolean", "x-env-value": "APP_HASHKEY_ENABLED" },
                "value": { "type": "string", "x-env-value": "APP_HASHKEY_VALUE" }
              }
            }
          }
        }
      }
    }
  }
}
