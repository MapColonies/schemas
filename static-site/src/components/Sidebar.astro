// Generated by Copilot
import { normalizeBasePath } from '@/lib/utils';

// Load schema data at build time
let schemaData;
try {
  schemaData = await import('../../public/data/schemas.json');
} catch (error) {
  console.warn('Schema data not found. Run build:data first.');
  schemaData = { schemas: [], categories: [] };
}

// Get the base path with trailing slash
const base = normalizeBasePath(import.meta.env.BASE_URL || '/');

// Group schemas by category, then by path (to group versions together)
const schemasByCategory = schemaData.schemas.reduce(
  (acc: Record<string, any[]>, schema: any) => {
    const category = schema.category;
    if (!acc[category]) acc[category] = [];
    acc[category].push(schema);
    return acc;
  },
  {} as Record<string, any[]>
);

// For each category, group by path with hierarchical names
const groupedSchemas: Record<string, Array<{ path: string; name: string; versions: any[] }>> = {};
Object.entries(schemasByCategory).forEach(([category, schemas]) => {
  const byPath = (schemas as any[]).reduce((acc: Record<string, any[]>, schema: any) => {
    if (!acc[schema.path]) acc[schema.path] = [];
    acc[schema.path].push(schema);
    return acc;
  }, {});

  groupedSchemas[category] = Object.entries(byPath)
    .map(([path, versions]) => {
      // Sort versions in descending order
      const sorted = (versions as any[]).sort((a, b) => b.version - a.version);
      // Format the path as a readable title, removing the first part (category)
      // e.g., "infra/opala/manager" -> "Opala / Manager"
      const pathParts = path.split('/');
      const hierarchicalName = pathParts
        .slice(1) // Skip the first part (category)
        .map((part) => part.charAt(0).toUpperCase() + part.slice(1))
        .join(' / ');
      return {
        path,
        name: hierarchicalName,
        versions: sorted,
      };
    })
    .slice(0, 15); // Limit to 15 unique schemas per category
});
---

<aside class="w-80 border-r overflow-y-auto bg-gray-50 dark:bg-gray-800 hidden md:block">
  <nav class="p-4">
    <div class="mb-6 space-y-1">
      <a href={`${base}`} class="block py-2 px-3 rounded hover:bg-gray-200 dark:hover:bg-gray-700 font-medium"> üè† Home </a>
    </div>

    <!-- Schema categories with grouped versions - now collapsible -->
    {
      Object.entries(groupedSchemas).map(([category, schemaGroups]) => (
        <details class="mb-4 group/category" open>
          <summary class="cursor-pointer font-semibold text-sm uppercase text-gray-600 dark:text-gray-400 mb-2 px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700 list-none flex items-center gap-2">
            <svg
              class="w-3 h-3 flex-shrink-0 transition-transform group-open/category:rotate-90"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <span>{category}</span>
          </summary>
          <ul class="space-y-1 mt-2">
            {schemaGroups.map((group: any) => {
              const hasSingleVersion = group.versions.length === 1;
              const latestVersion = group.versions[0];
              const schemaTitle = latestVersion.title || group.name;

              return (
                <li>
                  {hasSingleVersion ? (
                    // Single version: direct link with left padding to align with dropdown text
                    <a
                      href={`${base}schema/${group.versions[0].path}/v${group.versions[0].version}`}
                      class="block py-2 pl-8 pr-3 text-sm rounded hover:bg-gray-200 dark:hover:bg-gray-700"
                      title={schemaTitle}
                    >
                      {group.name}
                    </a>
                  ) : (
                    // Multiple versions: expandable dropdown
                    <details class="group">
                      <summary
                        class="cursor-pointer py-2 pl-3 pr-3 text-sm rounded hover:bg-gray-200 dark:hover:bg-gray-700 list-none flex items-center gap-2"
                        title={schemaTitle}
                      >
                        <svg
                          class="w-3 h-3 flex-shrink-0 transition-transform group-open:rotate-90"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                        <div class="flex items-center justify-between flex-1 min-w-0 gap-2">
                          <span class="flex-1 min-w-0">{group.name}</span>
                          <span class="text-xs text-gray-500 flex-shrink-0">{group.versions.length}</span>
                        </div>
                      </summary>
                      <ul class="mt-1 ml-8 space-y-1">
                        {group.versions.map((version: any) => (
                          <li>
                            <a
                              href={`${base}schema/${version.path}/v${version.version}`}
                              class="block py-1.5 px-2 text-xs rounded hover:bg-gray-200 dark:hover:bg-gray-700 font-mono"
                              title={version.title || `v${version.version}`}
                            >
                              v{version.version}
                            </a>
                          </li>
                        ))}
                      </ul>
                    </details>
                  )}
                </li>
              );
            })}
          </ul>
        </details>
      ))
    }
  </nav>
</aside>

