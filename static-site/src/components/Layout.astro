---
// Generated by Copilot
import '@/styles/globals.css';
import { normalizeBasePath } from '@/lib/utils';

interface Props {
  title?: string;
}

const { title = 'MapColonies Schemas' } = Astro.props;
const fullTitle = title === 'MapColonies Schemas' ? title : `${title} | MapColonies Schemas`;
const base = normalizeBasePath(import.meta.env.BASE_URL || '/');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{fullTitle}</title>
    <meta name="description" content="MapColonies JSON Schema Documentation" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
  </head>
  <body class="h-screen bg-background text-foreground overflow-hidden">
    <div class="flex flex-col h-full">
      <slot />
    </div>

    <!-- Dark mode script (runs inline before page renders) -->
    <script is:inline>
      // Apply dark mode immediately to prevent flash
      if (localStorage.getItem('darkMode') === 'true') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </body>
</html>
